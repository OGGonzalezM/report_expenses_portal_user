<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="create_supplier">
		<t t-call="website.layout">
			<title>Create a vendor</title>
    		<meta charset="UTF-8"/>
    		<div id="" class="container">
    			<t t-if="cancreate">
    				<div class="row">
    					<div class="col-md-12 text-center">
    						<h3>
    							Create a vendor
    						</h3>
    					</div>
    				</div>
    				<section>
    					<form action="/website/create_vendor" class="s_website_form form-horizontal container-fluid mt32" method="post" enctype="multipart/form-data" id="formVendor">

    						<input type="hidden" id="csrf_token" name="csrf_token" t-att-value="request.csrf_token()" />

    						<!-- Field name -->
    						<div class="form-group form-field o_website_form_required">
	                            <div class="col-md-3 col-sm-4 text-right">
	                                <label class="control-label" for="name">Name</label>
	                            </div>
	                            <div class="col-md-7 col-sm-8">
	                                <input type="text" class="form-control o_website_form_input" name="name"  required="1" placeholder=""/>
	                            </div>
	                        </div>

	                        <!-- VAT Field -->
	                        <div class="form-group form-field o_website_form_required">
	                            <div class="col-md-3 col-sm-4 text-right">
	                                <label class="control-label" for="vat">VAT</label>
	                            </div>
	                            <div class="col-md-7 col-sm-8">
	                                <input type="text" class="form-control o_website_form_input" name="vat"  required="1" placeholder=""/>
	                            </div>
	                        </div>

	                        <!-- Sending button -->
	                        <div class="form-group">
                                <div class="col-md-offset-3 col-sm-offset-4 col-sm-8 col-md-7">
                                    <button id="btnSendVendor" class="btn btn-primary btn-lg">Send</button>
                                    <span id="resultVendor"/>
                                </div>
                            </div>

    					</form>
    				</section>
    			</t>
    			<t t-else="">
    				<div class="row">
    					<div class="col-md-12 text-center">
    						<h3>
    							We're sorry, you can't create vendors
    						</h3>
    					</div>
    				</div>
    				
    			</t>
    		</div>
		</t>
	</template>
</odoo>